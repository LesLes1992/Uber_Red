<h1> <%= @vehicle.make %> </h1>
<h3>Size: <%= @vehicle.size %></h3>
<div>
    <% if @vehicle.vehicle_image.attached? %>
        <%= cl_image_tag @vehicle.vehicle_image.key, cloud_name: "dapawns9w",:quality=>"auto:best", width: 200, crop: "scale" %>
    <% end %> 
</div>
<div>
    <%if user_signed_in? %>
        <% if (@vehicle.order == nil ) && (current_user.has_role? :traveler) %>
            <%=  link_to('Make a booking', new_vehicle_order_path(@vehicle), class: "btn btn-primary") %>
        <% elsif (@vehicle.order != nil ) && (current_user.has_role? :traveler) %>
            <%= "This vehicle has been booked." %>
        <% else %>
        <% end %> 
    <% end %>
</div>
<% if (user_signed_in?) && (current_user.has_role? :driver) %> 
<div class = "btn-toolbar mt-2" >
    <%= link_to('Edit', edit_vehicle_path(@vehicle), class: 'btn btn-warning me-2') %>
    <%= button_to('Delete', @vehicle, class: 'btn btn-danger', method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete '#{@vehicle.make}' ?" } } )  %>
</div>
<% end %>
